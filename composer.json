{
    "name": "matryoshka-model/mongo-wrapper",
    "description": "MongoDB matryoshka wrapper",
    "homepage": "https://github.com/matryoshka-model/mongo-wrapper",
    "license": "BSD-2-Clause",
    "require": {
        "php": ">=5.4.0",
        "ext-mongo": "*",
        "matryoshka-model/matryoshka": "0.5.*@dev",
        "zendframework/zend-stdlib": "2.*",
        "zendframework/zend-inputfilter": "2.*",
        "zendframework/zend-paginator": "2.*",
        "zendframework/zend-servicemanager": "2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2",
        "satooshi/php-coveralls": "dev-master",
        "zendframework/zendframework": "dev-master"
    },
    "authors": [
        {
            "name": "Leonardo Grasso",
            "email": "me@leonardograsso.com",
            "homepage": "http://github.com/leogr"
        },
        {
            "name": "Antonio Visalli",
            "email": "antonino.visalli@gmail.com",
            "homepage": "http://github.com/visa4"
        },
        {
            "name": "Lorenzo Fontana",
            "email": "fontanalorenzo@me.com",
            "homepage": "https://github.com/fntlnz"
        },
        {
            "name": "Leo Di Donato",
            "email": "leodidonato@gmail.com",
            "homepage": "http://github.com/leodido"
        }
    ],
    "autoload": {
        "psr-0": {
            "Matryoshka": "library/",
            "MatryoshkaModelWrapperMongoTest": "tests/"
        },
        "classmap": [
            "./"
        ]
    },
    "keywords": [
        "model",
        "matryoshka",
        "mongo",
        "mongodb",
        "wrapper",
        "nosql",
        "mvc",
        "db"
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "0.4.x-dev",
            "dev-develop": "0.5.x-dev"
        }
    },
    "suggest": {
        "matryoshka-model/matryoshka": "Model service layer that normalize and standardize your model's interface use",
        "matryoshka-model/zf2-matryoshka-module": "ZF2 module for matryoshka library",
        "matryoshka-model/rest-wrapper": "Matryoshka wrapper aimed at creating restful API clients"
    }
}
